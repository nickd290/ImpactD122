  PAID        // Job is paid/completed
  CANCELLED   // Job was cancelled
}

enum JobType {
  FLAT
  FOLDED
  BOOKLET_SELF_COVER
  BOOKLET_PLUS_COVER
}

enum NotificationType {
  QUOTE_READY
  PROOF_READY
  PROOF_APPROVED
  SHIPMENT_SCHEDULED
  INVOICE_SENT
  PO_CREATED
  JOB_READY_FOR_PRODUCTION
  JOB_SUBMITTED_CONFIRMATION
  PO_ACCEPTED
  PO_REJECTED
  BRADFORD_PO_CREATED
}

